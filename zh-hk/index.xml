&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="nv">KUBECTX_CURRENT_FGCOLOR&lt;/span>&lt;span class="o">=&lt;/span>&lt;span class="k">$(&lt;/span>tput setaf 6&lt;span class="k">)&lt;/span>
