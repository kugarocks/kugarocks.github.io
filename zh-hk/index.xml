&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="nb">alias&lt;/span> &lt;span class="nv">tailf&lt;/span>&lt;span class="o">=&lt;/span>&lt;span class="s2">&amp;#34;tail -f&amp;#34;&lt;/span>
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="nb">alias&lt;/span> &lt;span class="nv">lf&lt;/span>&lt;span class="o">=&lt;/span>&lt;span class="s1">&amp;#39;ll -p | grep -v /&amp;#39;&lt;/span>
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="nb">alias&lt;/span> &lt;span class="nv">ldir&lt;/span>&lt;span class="o">=&lt;/span>&lt;span class="s1">&amp;#39;ls -ld -- */&amp;#39;&lt;/span>
