&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="nv">KUBE_PS1_SUFFIX&lt;/span>&lt;span class="o">=&lt;/span>&lt;span class="s2">&amp;#34;]&amp;#34;&lt;/span>
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="nv">KUBE_PS1_SYMBOL_ENABLE&lt;/span>&lt;span class="o">=&lt;/span>&lt;span class="nb">false&lt;/span>
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="nv">KUBE_PS1_CTX_COLOR&lt;/span>&lt;span class="o">=&lt;/span>&lt;span class="s2">&amp;#34;83&amp;#34;&lt;/span>
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="nv">KUBE_PS1_NS_COLOR&lt;/span>&lt;span class="o">=&lt;/span>&lt;span class="s2">&amp;#34;201&amp;#34;&lt;/span>
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="c1"># kubectl alias&lt;/span>
